{
  "ConnectionStrings": {
    "VertrDbConnection": "Server=localhost;Port=5432;User Id=postgres;Password=admin;Database=vertr;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OrderExecutionSettings": {
    "TinvestGatewayUrl": "http://localhost:5125",
    "IsOperationsProducerEnabled": true,
    "IsOrderStateConsumerEnabled": true,
    "IsOrderTradesConsumerEnabled": true,
    "OperationsTopicKey": "Orders.Operations",
    "OrderStateTopicKey": "Orders.OrderState",
    "OrderTradesTopicKey": "Orders.OrderTrades"
  },
  "KafkaSettings": {
    "ConsumerSettings": {
      "GroupId": "PortfolioGroup",
      "BootstrapServers": "localhost:9092",
      "AutoOffsetReset": "Latest"
    },
    "ProducerSettings": {
      "BootstrapServers": "localhost:9092"
    },
    "Topics": {
      "Orders.OrderState": "tinvest.orderstate.dev",
      "Orders.OrderTrades": "tinvest.trades.dev",
      "Orders.Operations": "vertr.operations.dev"
    }
  }
}
