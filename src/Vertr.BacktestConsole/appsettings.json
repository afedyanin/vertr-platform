{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System.Net.Http.HttpClient": "Warning"
    },
    "Console": {
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
    }
  },
  "VertrForecastGateway": {
    "BaseAddress": "http://localhost:8081"
  },
  "ThresholdSettings": {
    "ThresholdValue": 0.00005,
    "ThresholdSigma": 1,
    "UseStatsThreshold": false
  },
  "Predictors": [
    "auto_arima",
    "random_walk",
    "history_average"
  ]
}