@using Vertr.MarketData.Contracts
@using Vertr.Platform.Host.Components.Models

@implements IDialogContentComponent<DepositModel>

<FluentMessageBarProvider Section="@App.MESSAGES_DIALOG" MaxMessageCount="1" />

<FluentDialogBody>
    <FluentDatePicker Label="Date" @bind-Value="@Content.SelectedDate" /><FluentTimePicker @bind-Value="@Content.SelectedTime" />
    <FluentNumberField @bind-Value="@Content.Amount" Appearance="FluentInputAppearance.Filled" style="width: 100%;">Amount (@Content.Currency):</FluentNumberField>
</FluentDialogBody>
