@using Vertr.MarketData.Contracts

@implements IDialogContentComponent<CandlesHistoryItem>

<FluentMessageBarProvider Section="@App.MESSAGES_DIALOG" MaxMessageCount="1" />

<CandlesHistoryGrid Height="650px"
    TableName="@_gridTableName"
    HistoryItemId="@Content.Id" />

@code {
    [Parameter]
    public CandlesHistoryItem Content { get; set; } = default!;

    private string _gridTableName => $"{Content.Day.ToString("dd-MMM-yyyy")} ({Content.Count} rows)";
}
