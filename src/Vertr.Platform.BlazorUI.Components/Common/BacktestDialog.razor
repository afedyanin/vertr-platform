@using Vertr.MarketData.Contracts
@using Vertr.Platform.BlazorUI.Components.Models
@using Vertr.Strategies.Contracts
@using Vertr.PortfolioManager.Contracts;

@implements IDialogContentComponent<BacktestModel>

<FluentMessageBarProvider Section="@ModelConsts.MESSAGES_DIALOG" MaxMessageCount="1" />

<FluentDialogBody>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentDatePicker Label="From" @bind-Value="@Content.SelectedDateFrom" /><FluentTimePicker @bind-Value="@Content.SelectedTimeFrom" />
    </FluentStack>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentDatePicker Label="To" @bind-Value="@Content.SelectedDateTo" /><FluentTimePicker @bind-Value="@Content.SelectedTimeTo" />
    </FluentStack>
    <br />
    <FluentTextField @bind-Value="@Content.Backtest.Description" Appearance="FluentInputAppearance.Filled" style="width: 100%;">Description:</FluentTextField>
    <FluentSelect TOption="StrategyMetadata"
                  Label="Strategy"
                  Items="@AllStrategies"
                  OptionValue="@(p => p.Id.ToString())"
                  OptionText="@(p => p.Name)"
                  style="width: 100%;"
                  @bind-SelectedOption="@Content.Strategy" />

    <br />
    <br />
    <FluentCheckbox @bind-Value="@Content.StartImmediately" Appearance="FluentInputAppearance.Filled" style="width: 100%;" Label="Start Immediately"></FluentCheckbox>
    <br />
</FluentDialogBody>
