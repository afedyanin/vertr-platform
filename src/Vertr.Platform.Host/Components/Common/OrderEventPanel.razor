@using Vertr.MarketData.Contracts
@using Vertr.Platform.Host.Components.Models
@using Vertr.Strategies.Contracts

@implements IDialogContentComponent<OrderEventModel>

<FluentMessageBarProvider Section="@App.MESSAGES_DIALOG" MaxMessageCount="1" />

<FluentDialogBody>
    <FluentTextField Value="@Content.OrderEvent.CreatedAt.ToString(ModelConsts.DateTimeFormat)" ReadOnly Appearance="FluentInputAppearance.Filled" style="width: 100%;">Created at:</FluentTextField>
    <FluentTextField Value="@Content.OrderEvent.JsonDataType" ReadOnly Appearance="FluentInputAppearance.Filled" style="width: 100%;">Type:</FluentTextField>
    <FluentTextField Value="@Content.OrderEvent.RequestId.ToString()" Appearance="FluentInputAppearance.Filled" style="width: 100%;">Request Id:</FluentTextField>
    <FluentTextField Value="@Content.OrderEvent.OrderId?.ToString()" Appearance="FluentInputAppearance.Filled" style="width: 100%;">Order Id:</FluentTextField>
    <FluentTextField Value="@Content.Instrument.GetFullName()" Appearance="FluentInputAppearance.Filled" style="width: 100%;">Instrument:</FluentTextField>
    <FluentTextField Value="@Content.OrderEvent.PortfolioId.ToString()" ReadOnly Appearance="FluentInputAppearance.Filled" style="width: 100%;">SubAccount Id:</FluentTextField>
    <FluentTextField Value="@Content.OrderEvent.PortfolioId.ToString()" ReadOnly Appearance="FluentInputAppearance.Filled" style="width: 100%;">SubAccount Id:</FluentTextField>
    <FluentTextArea Value="@Content.OrderEvent.JsonData" ReadOnly Rows="30" Appearance="FluentInputAppearance.Filled" style="width: 100%;" Resize="TextAreaResize.Vertical"></FluentTextArea>
</FluentDialogBody>
